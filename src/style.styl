body
    font-size xx-large

nav ul
    list-style none
    display flex
    padding-top 0
    justify-content space-evenly

  span, a
   padding 0.5em 

.active 
    background-color yellow


for n in 0..6
    li:nth-child({n+1})  
        color: hsl(n*360deg/7,100%,50%)

:root 
	--main-bg-color #d6b9a4
	--cup-color #474747
	--cup-width 30vw
	--cup-height 24vw
	--cup-handle-width 5vw
	--cup-handle-height calc(2 * var(--cup-handle-width))
	--cup-border-width 2vw
	--cup-inside-width calc(var(--cup-width) - var(--cup-border-width))
	--cup-inside-height calc(var(--cup-height) - var(--cup-border-width))
	--border-width 1vw
	--main-border var(--border-width) solid var(--cup-color)
	--plate-width 25vw
	--plate-height 2vw
	--coffee-bottom 80%
	--water-bottom 0
	--milk-bottom 0
	--liquor-bottom 0
	--whipped_cream-bottom 0
	--steamed_milk-bottom 0
	--milk_foam-bottom 0
	--chocolate-bottom 0
	--coffee-color #3c302f
	--water-color #b1dce2
	--milk-color #f0ebe5
	--liquor-color #fc8626
	--whipped_cream-color #fceecb
	--milk_foam-color #fceecb
	--steamed_milk-color #ffd7b3
	--chocolate-color #391e09
	
.social 
	position absolute
	top 10px
	left 10px
.container 
	display flex
	flex-direction column
	align-items center
	justify-content center
	width 70vw
.coffee_name 
	color #f1faee
	text-align center
	font-size 4vw
.options 
	display grid
	grid-gap 1vh
	grid-template-rows repeat(10, 35px)
	grid-template-columns 120px
	justify-content space-evenly
	box-sizing border-box
	button 
		user-select none
		background rgba(214, 217, 227, 0.6)
		outline none
		font-size 1rem
		border 2px solid #a67a60
		box-shadow none
		color #363636
		box-sizing border-box
		border-radius 1vh
		&:hover 
			cursor pointer
			border-width 4px
			background rgba(255, 255, 255, 0.6)
	.selected 
		border-width 4px
		background rgba(255, 255, 255, 0.8)
		box-sizing border-box
.cup 
	width var(--cup-width)
	height var(--cup-height)
	border-radius 0 0 10vw 10vw
	position relative
	background-color var(--cup-color)
	z-index 10
	box-sizing border-box
	&::after 
		content ""
		position absolute
		top 10%
		left calc(100% - 1vw)
		width var(--cup-handle-width)
		height var(--cup-handle-height)
		border var(--main-border)
		border-radius 50% 30%
.plate 
	position absolute
	top calc(100% + 1vw)
	left calc((var(--cup-width) - var(--plate-width)) / 2)
	width var(--plate-width)
	background var(--cup-color)
	height var(--plate-height)
	border-radius 1vw
.filling 
	position absolute
	left calc(var(--cup-border-width) / 2)
	bottom calc(var(--cup-border-width) / 2)
	width var(--cup-inside-width)
	height var(--cup-inside-height)
	overflow hidden
	border-radius 0 0 10vw 10vw
	background-color var(--main-bg-color)
	bottom 1vw
	div 
		position absolute
		width 100%
		transition all 1s linear
		color #817f75
		display flex
		align-items flex-start
		justify-content center
		height 0
		overflow hidden
		font-size 3vw
		height 100%
		bottom -100%
		box-sizing border-box
	&.reset 
		--coffee-bottom -100%
		--water-bottom -100%
		--milk-bottom -100%
		--liquor-bottom -100%
		--whipped_cream-bottom -100%
		--steamed_milk-bottom -100%
		--milk_foam-bottom -100%
		--chocolate-bottom -100%
		&.americano 
			--water-bottom 0
			--coffee-bottom -60%
		&.au_lait 
			--coffee-bottom -50%
			--milk-bottom 0%
		&.capuccino 
			--coffee-bottom -65%
			--steamed_milk-bottom -35%
			--milk_foam-bottom 0
		&.espresso 
			--coffee-bottom -60%
		&.latte 
			--coffee-bottom -60%
			--steamed_milk-bottom -20%
			--milk_foam-bottom 0%
		&.corretto 
			--coffee-bottom -45%
			--liquor-bottom -25%
		&.lungo 
			--water-bottom 0
			--coffee-bottom -50%
		&.macchiato 
			--coffee-bottom -70%
			--milk_foam-bottom 0
		&.mocha 
			--coffee-bottom -60%
			--chocolate-bottom -40%
			--steamed_milk-bottom -20%
			--whipped_cream-bottom 0%
		&.ristretto 
			--coffee-bottom -80%
div 
	&.chocolate 
		background var(--chocolate-color)
		bottom var(--chocolate-bottom)
		z-index 6
	&.coffee 
		background var(--coffee-color)
		bottom var(--coffee-bottom)
		line-height 4vw
		z-index 7
	&.liquor 
		background var(--liquor-color)
		bottom var(--liquor-bottom)
		z-index 4
	&.milk 
		background var(--milk-color)
		bottom var(--milk-bottom)
		z-index 2
	&.milk_foam 
		background var(--milk_foam-color)
		bottom var(--milk_foam-bottom)
		z-index 5
	&.steamed_milk 
		background var(--steamed_milk-color)
		bottom var(--steamed_milk-bottom)
		z-index 6
	&.water 
		background var(--water-color)
		bottom var(--water-bottom)
	&.whipped_cream 
		background var(--whipped_cream-color)
		bottom var(--whipped_cream-bottom)
		z-index 4
